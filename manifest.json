{
  "manifest_version": 3,
  "name": "CSWatch Stats Viewer",
  "version": "0.9.0",
  "description": "Muestra estad√≠sticas de CSWatch en el perfil de Steam.",
  "icons": {
    "16": "imgs/logo16.png",
    "48": "imgs/logo48.png",
    "128": "imgs/logo128.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "imgs/logo16.png",
      "48": "imgs/logo48.png",
      "128": "imgs/logo128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://steamcommunity.com/id/*", "*://steamcommunity.com/profiles/*"],
      "js": ["src/scripts/content.js"],
      "css": ["src/styles/content.css"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ]
}
